<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_first"
    android:padding="16dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background_first">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_spacing_small"
                android:layout_marginBottom="8dp"
                card_view:cardCornerRadius="@dimen/default_spacing_verySmall"
                card_view:contentPadding="@dimen/default_spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUMMARY"
                        android:textColor="@color/default_color_third"
                        android:textSize="@dimen/default_textSize_verySmall" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_spacing_veryVerySmall"
                        android:layout_marginBottom="@dimen/default_spacing_medium"
                        android:layout_marginTop="@dimen/default_spacing_medium"
                        android:background="@color/default_background_third"></View>

                    <TextView
                        android:id="@+id/show_details_overview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="balablabalbablablablabalbablablablabalablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabalbablablablabal"
                        android:textColor="@color/default_textColor_fourth"
                        android:textSize="@dimen/default_textSize_medium" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_spacing_small"
                android:layout_marginBottom="8dp"
                card_view:cardCornerRadius="@dimen/default_spacing_verySmall"
                card_view:contentPadding="@dimen/default_spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GENRES"
                        android:textColor="@color/default_color_third"
                        android:textSize="@dimen/default_textSize_verySmall" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_spacing_veryVerySmall"
                        android:layout_marginBottom="@dimen/default_spacing_medium"
                        android:layout_marginTop="@dimen/default_spacing_medium"
                        android:background="@color/default_background_third"></View>

                    <LinearLayout
                        android:id="@+id/show_details_genres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/show_information_genre"
                            android:text="DRAMA"
                            android:textColor="@color/default_textColor_first"
                            android:textSize="@dimen/default_textSize_verySmall" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_spacing_small"
                card_view:cardCornerRadius="@dimen/default_spacing_verySmall"
                card_view:contentPadding="@dimen/default_spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DETAILS"
                        android:textColor="@color/default_color_third"
                        android:textSize="@dimen/default_textSize_verySmall" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_spacing_veryVerySmall"
                        android:layout_marginBottom="@dimen/default_spacing_medium"
                        android:layout_marginTop="@dimen/default_spacing_medium"
                        android:background="@color/default_background_third"></View>

                    <TextView
                        android:id="@+id/show_details_informations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: \nStarted in: \nCountry: \nLanguage:"
                        android:textColor="@color/default_textColor_fourth"
                        android:textSize="@dimen/default_textSize_medium" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>