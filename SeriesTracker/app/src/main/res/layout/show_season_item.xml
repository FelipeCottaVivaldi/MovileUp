<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="@dimen/default_spacing_verySmall"
        android:layout_marginBottom="@dimen/default_spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#f0f0f0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/show_seasons_screenshot"
                android:layout_width="88dp"
                android:layout_height="128dp"
                android:scaleType="centerCrop"
                android:src="@drawable/season_item_placeholder"/>

            <TextView
                android:id="@+id/show_seasons_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Season 1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="left"
                android:textColor="#4a4a4a"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/show_seasons_episodes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 episodes"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="left"
                android:textSize="12sp"
                android:textColor="#a2a2a2"/>

        </LinearLayout>

        </android.support.v7.widget.CardView>


</LinearLayout>