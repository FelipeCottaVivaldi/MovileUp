<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_color_first"
        android:orientation="vertical"
        android:padding="@dimen/default_spacing_large">

        <ImageView
            android:id="@+id/favorites_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:scaleType="center"
            android:src="@drawable/favorites_header_tv_unhappy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorited Shows"
            android:textColor="@color/default_textColor_first"
            android:textSize="@dimen/default_textSize_medium" />

    </LinearLayout>

    <ListView
        android:id="@+id/favorites_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/list_view_background_color">
    </ListView>

</LinearLayout>